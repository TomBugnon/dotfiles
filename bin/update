#!/bin/sh

if [ "$(uname -s)" = "Darwin" ]; then
  brew upgrade; vim +PlugUpgrade +PlugInstall! +PlugClean! +qa; npm update -g; upgrade_oh_my_zsh; pip install -U pip setuptools; apm update --no-confirm
else
  sudo apt-get update; sudo apt-get upgrade -y; upgrade_oh_my_zsh; vim +PlugUpgrade +PlugInstall! +PlugClean! +qa; sudo -H pip install -U pip setuptools; pip3 install -U pip setuptools
fi
